---
import { ViewTransitions } from "astro:transitions";
import "../assets/styles/tailwind.css";
import CustomStyles from "../components/CustomStyles.astro";
import BasicScripts from "../components/BasicScripts.astro";

const { metadata } = Astro.props;

const siteTitle: string = metadata.siteTitle;
const pageTitle: string = metadata.pageTitle;

const titleText = `${pageTitle} - ${siteTitle}`;
---

<!doctype html>
<html lang="en" class="2xl:text-[20px]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{titleText}</title>
    <CustomStyles />
    <ViewTransitions />
  </head>

  <body class="antialiased text-default bg-page">
    <BasicScripts />
    <slot />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
