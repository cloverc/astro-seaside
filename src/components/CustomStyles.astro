---
import "@fontsource/inter";
import "@fontsource/kameron";
---

<style is:inline is:global>
  :root {
    --shn-font-sans: "Inter Variable";
    --shn-font-serif: "Kameron";
    --shn-font-heading: var(--shn-font-serif);

    --shn-color-primary: rgb(30 64 175);
    --shn-color-secondary: rgb(65, 150, 204);
    --shn-color-accent: rgb(223 22 122);

    --shn-color-text-default: rgb(255 255 255);
    --shn-color-text-dark: rgb(0 0 0);
    --shn-color-bg-card: rgb(30 64 175);
    --shn-color-bg-page: rgb(12 5 109);
  }
</style>
