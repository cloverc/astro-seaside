---
import { storyblokEditable } from "@storyblok/astro";
import { Image } from "astro:assets";

const { blok } = Astro.props;
---

<article
  {...storyblokEditable(blok)}
  class="max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 md:grid-cols-2"
>
  {
    (
      <a class="relative block group" href="">
        <div class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-72 lg:pb-[56.25%] overflow-hidden bg-gray-400 rounded shadow-lg">
          <Image
            src={blok.profile_picture.filename}
            class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400"
            width={900}
            height={600}
            sizes="(max-width: 900px) 400px, 900px"
            alt={blok.profile_picture.alt}
          />
        </div>
      </a>
    )
  }
  <div class="mt-2">
    <header>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading">
        {
          (
            <a
              class="hover:text-blue-700 transition ease-in duration-200"
              href={blok.slug}
            >
              {blok.name}
            </a>
          )
        }
      </h2>
    </header>
  </div>
</article>
